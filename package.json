{
  "name": "playwright-javascript-learning-roadmap",
  "version": "1.0.0",
  "description": "Lộ trình học Playwright JavaScript toàn diện cho QC chuyên nghiệp | Comprehensive Playwright JavaScript learning roadmap for QC professionals",
  "author": "Learning Path by Claude",
  "license": "MIT",
  "scripts": {
    "dev": "honkit serve",
    "build": "honkit build",
    "clean": "rm -rf _book",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:module1": "playwright test module-1-basics/",
    "test:module2": "playwright test module-2-organization/",
    "test:module3": "playwright test module-3-api-testing/",
    "test:examples": "playwright test **/examples/**/*.spec.ts",
    "test:exercises": "playwright test **/exercises/**/*.spec.ts",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:all-browsers": "playwright test --project=chromium --project=firefox --project=webkit",
    "report": "playwright show-report",
    "install:browsers": "playwright install",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\""
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "javascript",
    "typescript",
    "e2e",
    "api-testing",
    "learning",
    "tutorial",
    "vietnamese"
  ],
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "gitbook-plugin-github": "^3.0.0",
    "gitbook-plugin-mermaid-gb3": "^2.1.0",
    "gitbook-plugin-search-plus": "^1.0.4-alpha-3",
    "honkit": "^6.1.4",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.0.0",
    "ajv": "^8.17.0",
    "csv-parse": "^5.5.0",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
